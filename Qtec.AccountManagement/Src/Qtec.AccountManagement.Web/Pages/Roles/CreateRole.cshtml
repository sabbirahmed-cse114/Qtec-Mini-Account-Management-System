@page
@model Qtec.AccountManagement.Web.Pages.Roles.CreateRoleModel
@{
    ViewData["Title"] = "Create Role";
}

<h2 class="text-center">Create New Role</h2>
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<form method="post">
    <div class="mb-3">
        <label>Role Name</label>
        <input type="text" asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="d-flex justify-content-center">
        <button type="submit" class="btn btn-outline-info col-5">Create</button>
        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        <a asp-page="/ChartsOfAccounts/ChartTree" class="btn btn-outline-danger btn-sm col-5">Cancel</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}